// learn more about it in the docs: https://pris.ly/d/prisma-schema


generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


enum Roles {
  STUDENT
  TEACHER
  ADMIN
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  hash String 
  fullname  String?
  role Roles @default(STUDENT)
  
  course String?
  speciality String?
} 
