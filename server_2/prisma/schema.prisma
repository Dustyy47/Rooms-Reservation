// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Roles {
  STUDENT
  TEACHER
  ADMIN
}

model User {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  hash     String
  fullname String?
  role     Roles   @default(STUDENT)

  course     String?
  speciality String?
  Order      Order[]
}

model Room {
  id          Int     @id @default(autoincrement())
  title       String  @unique
  adress      String
  description String?
  image       String?
  Order       Order[]
}

enum OrderStatus {
  FULLFILLED
  REJECTED
  PENDING
}

model Order {
  id        Int         @id @default(autoincrement())
  roomId    Int
  room      Room        @relation(fields: [roomId], references: [id])
  start     DateTime
  end       DateTime
  orderById Int
  orderBy   User        @relation(fields: [orderById], references: [id])
  status    OrderStatus @default(PENDING)
}
